    <bean class="java.lang.String" id="dbUrl">
       <!--  <constructor-arg value="jdbc:mysql://mgsdb_user:password@localhost:3306/mgsdb?reconnect=true"/> -->
       <constructor-arg value="${DATABASE_URL}"/> 
    </bean>
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
 		<property name="url" value="#{'jdbc:mysql://' + dbUrl.split('.+@')[1].split(':.+')[0] + ':' + dbUrl.split('.+@.+:')[1].split('/.+')[0] + '/' + dbUrl.split('.+@.+/')[1].split('\\?')[0] }" /> 
		<property name="username" value="#{ @dbUrl.split('jdbc:.+//')[1].split(':.+')[0] }" />
		<property name="password" value="#{ @dbUrl.split('@.+')[0].split('.+:')[1] }" />
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
        
        <property name="configLocation">
            <value>file:src/test/resources/hibernate.cfg.xml</value>
        </property>
        
        <property name="annotatedClasses">
			<list>
				<value>com.eastapps.meme_gen_server.domain.User</value>
				<value>com.eastapps.meme_gen_server.domain.LvMemeType</value>
				<value>com.eastapps.meme_gen_server.domain.Meme</value>
				<value>com.eastapps.meme_gen_server.domain.MemeBackground</value>
				<value>com.eastapps.meme_gen_server.domain.MemeText</value>
                <value>com.eastapps.meme_gen_server.domain.DeviceInfo</value>
                <value>com.eastapps.meme_gen_server.domain.UserFavMemeType</value>
			</list>
		</property>
		
	</bean>

	<tx:annotation-driven />

</beans>
