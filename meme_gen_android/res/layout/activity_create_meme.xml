<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <TableRow
        android:id="@+id/share_save_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:minHeight="@string/create_meme_top_row_height" >

        <LinearLayout
            android:id="@+id/share_save_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/share_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/share_string" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/save_string" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/top_text_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:minHeight="@string/create_meme_top_row_height" >

        <LinearLayout
            android:id="@+id/top_text_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/edit_top_text_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/edit_top_text_string" />

            <ImageButton
                android:id="@+id/config_top_text_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/config_icon" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/bottom_text_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:minHeight="@string/create_meme_top_row_height" >

        <LinearLayout
            android:id="@+id/bottom_text_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/edit_bottom_text_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/edit_bottom_text_string" />

            <ImageButton
                android:id="@+id/config_bottom_text_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="center"
                android:src="@drawable/config_icon" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/image_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="175"
        android:minHeight="@string/create_meme_top_row_height" >

        <RelativeLayout
            android:id="@+id/image_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_weight="1" >

            <include
                android:id="@+id/meme_create_meme_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/meme_view" />

        </RelativeLayout>

    </TableRow>

</TableLayout>